{
  "manifest_version": 3,
  "name": "Sneaky Clean",
  "description": "Toggle extension on and off with one click",
  "version": "1.0",
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "img/icon_16.png",
    "default_title": "Sneaky Clean",
    "badge": {
      "color": "#00FF00",
      "text": "ON"
    }
  },
  "permissions": ["tabs", "storage"]
}
